{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [{"type": "command", "command": "echo 'Reminder: Ensure JSDoc comments and proper error handling'"}]
      },
      {
        "matcher": "Write",
        "hooks": [{"type": "command", "command": "echo 'Reminder: Ensure JSDoc comments and proper error handling'"}]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [{"type": "command", "command": "if [[ \"$CLAUDE_TOOL_ARG_FILE_PATH\" == *.js || \"$CLAUDE_TOOL_ARG_FILE_PATH\" == *.jsx || \"$CLAUDE_TOOL_ARG_FILE_PATH\" == *.ts || \"$CLAUDE_TOOL_ARG_FILE_PATH\" == *.tsx ]]; then echo 'Remember to run linter and tests'; fi"}]
      },
      {
        "matcher": "Write",
        "hooks": [{"type": "command", "command": "if [[ \"$CLAUDE_TOOL_ARG_FILE_PATH\" == *.js || \"$CLAUDE_TOOL_ARG_FILE_PATH\" == *.jsx || \"$CLAUDE_TOOL_ARG_FILE_PATH\" == *.ts || \"$CLAUDE_TOOL_ARG_FILE_PATH\" == *.tsx ]]; then echo 'Remember to run linter and tests'; fi"}]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [{"type": "command", "command": "echo 'Session ended. Verify: JSDoc comments, test coverage (â‰¥60%), no console.log in production code'"}]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test*)",
      "Bash(npm run build)",
      "Bash(npm run e2e*)",
      "Bash(npm install*)",
      "Bash(npx playwright*)",
      "Bash(docker compose*)",
      "Bash(docker build*)",
      "Bash(docker ps*)",
      "Bash(docker logs*)",
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(gh pr*)",
      "Bash(gh issue*)",
      "Bash(ls*)",
      "Bash(cat package.json)",
      "Bash(cat docker-compose*)",
      "Bash(cat Dockerfile*)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(*--force*)",
      "Bash(git push --force*)",
      "Bash(*password*)",
      "Bash(*secret*)",
      "Bash(*token*)",
      "Bash(docker rm -f*)",
      "Bash(docker system prune -a*)"
    ]
  },
  "preferences": {
    "autoCompact": true,
    "compactThreshold": 80,
    "codeStyle": {
      "singleQuotes": true,
      "semicolons": true,
      "trailingCommas": "es5",
      "tabWidth": 2
    }
  },
  "agents": {
    "frontend": {
      "description": "React + MUI frontend development",
      "context": [
        ".claude/rules/frontend.md",
        ".claude/rules/testing.md",
        ".claude/rules/security.md"
      ],
      "tools": ["Read", "Write", "Edit", "Glob", "Grep", "Bash"]
    },
    "backend": {
      "description": "Node.js + Express backend development",
      "context": [
        ".claude/rules/backend.md",
        ".claude/rules/api-design.md",
        ".claude/rules/database.md",
        ".claude/rules/testing.md",
        ".claude/rules/security.md"
      ],
      "tools": ["Read", "Write", "Edit", "Glob", "Grep", "Bash"]
    },
    "devops": {
      "description": "CI/CD, Docker, and deployment",
      "context": [
        ".claude/rules/devops.md",
        ".claude/rules/security.md"
      ],
      "tools": ["Read", "Write", "Edit", "Glob", "Grep", "Bash"]
    },
    "architect": {
      "description": "System design, ADRs, and technical decisions",
      "context": [
        ".claude/rules/architecture.md",
        ".claude/rules/api-design.md",
        ".claude/rules/database.md"
      ],
      "tools": ["Read", "Write", "Edit", "Glob", "Grep"]
    },
    "qa": {
      "description": "E2E testing, test plans, and quality gates",
      "context": [
        ".claude/rules/testing.md",
        ".claude/rules/quality-gates.md"
      ],
      "tools": ["Read", "Write", "Edit", "Glob", "Grep", "Bash"]
    },
    "api-designer": {
      "description": "REST API design and OpenAPI specifications",
      "context": [
        ".claude/rules/api-design.md",
        ".claude/rules/documentation.md",
        ".claude/rules/backend.md"
      ],
      "tools": ["Read", "Write", "Edit", "Glob", "Grep"]
    },
    "documentation": {
      "description": "Technical documentation and runbooks",
      "context": [
        ".claude/rules/documentation.md",
        ".claude/rules/architecture.md"
      ],
      "tools": ["Read", "Write", "Edit", "Glob", "Grep"]
    },
    "testing": {
      "description": "Unit, integration, and E2E test writer",
      "context": [
        ".claude/rules/testing.md",
        ".claude/rules/quality-gates.md",
        ".claude/rules/frontend.md",
        ".claude/rules/backend.md"
      ],
      "tools": ["Read", "Write", "Edit", "Glob", "Grep", "Bash"]
    },
    "code-review": {
      "description": "Code review and PR quality assessment",
      "context": [
        ".claude/rules/code-review.md",
        ".claude/rules/security.md",
        ".claude/rules/quality-gates.md"
      ],
      "tools": ["Read", "Glob", "Grep"]
    },
    "security": {
      "description": "Security review and implementation",
      "context": [
        ".claude/rules/security.md",
        ".claude/rules/backend.md"
      ],
      "tools": ["Read", "Glob", "Grep"]
    },
    "database": {
      "description": "Database schema design and query optimization",
      "context": [
        ".claude/rules/database.md",
        ".claude/rules/backend.md"
      ],
      "tools": ["Read", "Write", "Edit", "Glob", "Grep", "Bash"]
    }
  }
}
